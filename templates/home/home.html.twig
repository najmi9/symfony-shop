{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-3">
        {% include 'home/_search.html.twig' %}
    </div>
    <div class="col-lg-9">
    <div class="mb-2 bg-white d-flex justify-content-between rounded shadow-lg p-2">
        <div class="text-primary text-right h4 pt-2"> 
            <i class="fas fa-bars text-warning"></i>{{ products.getTotalItemCount }} products
        </div>
        <div class="text-right">
            {{ knp_pagination_sortable(products, 'Price', 'price') }} 
        </div>
    </div>
        <div class="row justify-content-center align-self-center align-items-start">
            {% for product in products %}
            <div class="col-lg-6 col-md-6 mb-2">
                {% include 'home/cart.html.twig' %}
            </div>
            {% endfor %}
            <div class="navigation">
                 {{ knp_pagination_render(products) }}
            </div>
        </div>

    </div>
</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
{{ encore_entry_script_tags('home') }}
{% endblock %}